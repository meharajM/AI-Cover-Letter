{
    "manifest_version": 3,
    "name": "Cover letter Generator",
    "version": "1.0",
    "description": "Generates cover letter using AI",
    "permissions": ["activeTab", "background", "storage", "cookies"],
    "host_permissions": ["https://www.careered.ai/tool/cover-letter"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
       
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": ["https://api.bard.com/"]
  }
  